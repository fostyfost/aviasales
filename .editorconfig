root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2

[*.css]
indent_size = 2
tab_width = 2

[*.sass]
indent_size = 2
tab_width = 2

[*.scss]
indent_size = 2
tab_width = 2

[{*.ats,*.ts}]
indent_size = 2
tab_width = 2

[{*.bash,*.zsh,*.sh}]
indent_size = 2
tab_width = 2

[{*.js,*.cjs}]
indent_size = 2
tab_width = 2

[{*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_size = 2
tab_width = 2

[{*.yml,*.yaml}]
indent_size = 2

[{.eslintrc,composer.lock,.babelrc,.stylelintrc,jest.config,bowerrc,*.json,*.jsb3,*.jsb2}]
indent_size = 2
tab_width = 2
